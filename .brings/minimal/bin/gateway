#

xurl=/.brings/system/bin/gateway.sh

set -e
url=https://raw.githubusercontent.com/Gradual-Quanta/minichain/master/.brings/minimal${xurl#/.brings}
qm=$(ipfs add -Q $url --progress=0)
qm=${qm:-QmQiqSsb8utZQc2hPjQUoNkfEkk3V4Z8hMoF3ZuiRURn5w}
ipfs cat /ipfs/$qm | sh - /dev/stdin $*
if false; then
 sed -i -e "s/qm=\${qm:-.*}$/qm=\${qm:-$qm}/" -e 's/if [t]rue;/if false;/' $0
fi
